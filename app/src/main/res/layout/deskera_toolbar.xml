<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:id="@+id/test_toolbar"
    android:layout_alignParentTop="true"
    android:layout_height="@dimen/toolbar_height"
    android:layout_width="match_parent"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/iv_toolbar_primary"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d16dp"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/d8dp"
            android:paddingTop="@dimen/d8dp"
            android:visibility="gone"
            tools:text="back" />

        <ImageView
            android:contentDescription="@string/toolbar"
            android:id="@+id/iv_toolbar_secondary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/d16dp"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/d8dp"
            android:paddingTop="@dimen/d8dp" />


        <TextView
            android:drawablePadding="@dimen/d6dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/toolbar_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/d6dp"
            android:paddingStart="@dimen/d6dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/s16sp" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
