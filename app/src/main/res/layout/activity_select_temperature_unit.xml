<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SelectTemperatureUnitActivity">

    <include layout="@layout/deskera_toolbar" />

    <TextView
        android:background="@drawable/rectangular_colored_border"
        android:gravity="center"
        android:id="@+id/tv_Fareneit"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/d16dp"
        android:text="@string/label_fahrenheit" />

    <TextView
        android:background="@drawable/rectangular_colored_border"
        android:gravity="center"
        android:id="@+id/tv_celcius"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/d16dp"
        android:text="@string/label_celsius" />
</LinearLayout>