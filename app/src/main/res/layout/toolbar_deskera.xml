<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:id="@+id/test_toolbar"
    android:layout_alignParentTop="true"
    android:layout_height="@dimen/toolbar_height"
    android:layout_width="match_parent"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/tv_toolbar_primary"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d16dp"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:text="@string/back" />

        <TextView
            android:id="@+id/tv_toolbar_secondary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d16dp"
            android:layout_width="wrap_content"
            android:minWidth="60dp" />


        <TextView
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/toolbar_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_toolbar_primary"
            android:layout_toStartOf="@id/tv_toolbar_secondary"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/s16sp"
            android:textStyle="bold"
            tools:text="Title" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
